{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "components-transformed.schema.json",
  "type": "object",
  "required": ["components", "$source", "$generatedAt"],
  "properties": {
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "component",
          "id",
          "slug",
          "layer",
          "category",
          "description",
          "status",
          "a11y"
        ],
        "properties": {
          "component": { "type": "string", "minLength": 1 },
          "id": { "type": "string", "pattern": "^[a-z0-9]+$" },
          "slug": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
          "layer": {
            "type": "string",
            "enum": ["primitives", "compounds", "composers"]
          },
          "alternativeNames": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          },
          "normalizedAliases": {
            "type": "array",
            "items": { "type": "string", "pattern": "^[a-z0-9]+$" },
            "uniqueItems": true
          },
          "category": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "a11y": {
            "type": "object",
            "required": ["pitfalls"],
            "properties": {
              "pitfalls": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          },
          "status": {
            "type": "string",
            "enum": ["Planned", "Built", "DocOnly"]
          },
          "paths": {
            "type": "object",
            "properties": {
              "component": { "type": "string" },
              "docs": { "type": "string" }
            },
            "additionalProperties": false
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
          }
        },
        "additionalProperties": true
      }
    },
    "$source": { "type": "string" },
    "$generatedAt": { "type": "string" }
  },
  "additionalProperties": false
}
