{
  "$schema": "../designTokens.schema.json",
  "content": {
    "maxWidth": {
      "article": {
        "$type": "dimension",
        "$value": "{content.maxWidth.prose}",
        "$description": "Article content width"
      },
      "sidebar": {
        "$type": "dimension",
        "$value": "{content.maxWidth.narrow}",
        "$description": "Sidebar content width"
      },
      "documentation": {
        "$type": "dimension",
        "$value": "{content.maxWidth.wide}",
        "$description": "Technical documentation width"
      }
    },
    "spacing": {
      "paragraph": {
        "$type": "dimension",
        "$value": "{spacing.size.04}",
        "$description": "Space between paragraphs"
      },
      "section": {
        "$type": "dimension",
        "$value": "{spacing.size.08}",
        "$description": "Space between content sections"
      }
    }
  }
}
