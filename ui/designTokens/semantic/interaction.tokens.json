{
  "$schema": "../designTokens.schema.json",
  "interaction": {
    "text": {
      "hover": {
        "$type": "color",
        "$value": "{color.palette.neutral.600}"
      },
      "active": {
        "$type": "color",
        "$value": "{color.mode.dark}"
      },
      "disabled": {
        "$type": "color",
        "$value": "{color.palette.neutral.400}"
      }
    },
    "background": {
      "hover": {
        "$type": "color",
        "$value": "{color.palette.neutral.100}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.100}",
          "design.paths.dark": "{color.palette.neutral.800}"
        },
        "$description": "Secondary action hover state"
      },
      "active": {
        "$type": "color",
        "$value": "{color.palette.neutral.200}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.200}",
          "design.paths.dark": "{color.palette.neutral.700}"
        },
        "$description": "Secondary action active state"
      },
      "selected": {
        "$type": "color",
        "$value": "{color.palette.blue.200}",
        "$extensions": {
          "design.paths.light": "{color.palette.blue.200}",
          "design.paths.dark": "{color.palette.blue.800}"
        },
        "$description": "Highlight background for selections"
      },
      "disabled": {
        "$type": "color",
        "$value": "{color.palette.neutral.200}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.200}",
          "design.paths.dark": "{color.palette.neutral.700}"
        },
        "$description": "Primary action disabled state"
      }
    },
    "border": {
      "hover": {
        "$type": "color",
        "$value": "{color.palette.neutral.400}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.400}",
          "design.paths.dark": "{color.palette.neutral.500}"
        },
        "$description": "Secondary action border hover"
      },
      "active": {
        "$type": "color",
        "$value": "{color.palette.neutral.400}"
      },
      "disabled": {
        "$type": "color",
        "$value": "{color.palette.neutral.200}"
      }
    }
  }
}
