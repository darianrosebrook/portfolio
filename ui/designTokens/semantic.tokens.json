      "dangerStrong": { "$type": "color", "$value": "{color.palette.red.600}" },
      "dangerSubtle": {
        "$type": "color",
        "$value": "{color.palette.red.100}",
        "$extensions": {
          "design.paths.light": "{color.palette.red.100}",
          "design.paths.dark": "{color.palette.red.800}"
        }
      },
      "infoStrong": { "$type": "color", "$value": "{color.palette.blue.600}" },
      "infoSubtle": {
        "$type": "color",
        "$value": "{color.palette.blue.100}",
        "$extensions": {
          "design.paths.light": "{color.palette.blue.100}",
          "design.paths.dark": "{color.palette.blue.800}"
        }
      },
      "successStrong": {
        "$type": "color",
        "$value": "{color.palette.green.600}"
      },
      "successSubtle": {
        "$type": "color",
        "$value": "{color.palette.green.100}",
        "$extensions": {
          "design.paths.light": "{color.palette.green.100}",
          "design.paths.dark": "{color.palette.green.800}"
        }
      },
      "warningStrong": {
        "$type": "color",
        "$value": "{color.palette.orange.400}",
        "$extensions": {
          "design.paths.light": "{color.palette.orange.400}",
          "design.paths.dark": "{color.palette.orange.600}"
        }
