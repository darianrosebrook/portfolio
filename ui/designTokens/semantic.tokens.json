    "border": {
      "subtle": { "$type": "color", "$value": "{color.palette.neutral.300}" },
      "strong": { "$type": "color", "$value": "{color.palette.neutral.400}" },
      "focus": {
        "$type": "color",
        "$value": "{color.palette.brand.primary.500}"
      },
      "accent": { "$type": "color", "$value": "{color.palette.red.500}" },
      "bold": {
        "$type": "color",
        "$value": "{color.palette.neutral.600}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.600}",
          "design.paths.dark": "{color.palette.neutral.300}"
        }
      },
      "danger": { "$type": "color", "$value": "{color.palette.red.600}" },
      "disabled": {
        "$type": "color",
        "$value": "{color.palette.neutral.200}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.200}",
          "design.paths.dark": "{color.palette.neutral.700}"
