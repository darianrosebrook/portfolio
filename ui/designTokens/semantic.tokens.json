        "$type": "color",
        "$value": "{color.palette.neutral.300}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.300}",
          "design.paths.dark": "{color.palette.neutral.600}"
        }
      },
      "success": { "$type": "color", "$value": "{color.palette.green.600}" },
      "warning": { "$type": "color", "$value": "{color.palette.orange.600}" }
    },
    "status": {
      "info": { "$type": "color", "$value": "{color.palette.blue.500}" },
      "success": { "$type": "color", "$value": "{color.palette.green.500}" },
      "warning": { "$type": "color", "$value": "{color.palette.orange.500}" },
      "danger": { "$type": "color", "$value": "{color.palette.red.500}" },
      "highlight": {
        "$type": "color",
        "$value": "{color.palette.brand.primary.400}"
      }
    },
    "data": {
      "trendDefault": {
        "$type": "color",
        "$value": "{color.palette.blue.400}"
      },
      "trendDown": { "$type": "color", "$value": "{color.palette.red.500}" },
      "trendNeutral": {
        "$type": "color",
        "$value": "{color.palette.neutral.500}"
      },
      "trendUp": { "$type": "color", "$value": "{color.palette.green.500}" }
    },
    "gradient": {
      "brandPrimary": {
        "$type": "gradient",
        "$value": "{core.color.gradient.brandPrimary}"
      }
    },
    "overlay": {
      "scrim": { "$type": "color", "$value": "{core.color.overlay.scrim}" }
