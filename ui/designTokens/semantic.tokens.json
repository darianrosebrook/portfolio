          "design.paths.dark": "{color.palette.neutral.800}"
        }
      },
      "readOnly": {
        "$type": "color",
        "$value": "{color.palette.neutral.200}",
        "$extensions": {
          "design.paths.light": "{color.palette.neutral.200}",
          "design.paths.dark": "{color.palette.neutral.700}"
        }
