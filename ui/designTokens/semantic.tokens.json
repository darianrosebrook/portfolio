          "$value": "{typography.ramp.3}"
        },
        "lineHeight": {
          "$type": "dimension",
          "$value": "{typography.lineHeight.normal}"
        }
      }
    },
    "button": {
      "01": { "$type": "dimension", "$value": "{typography.ramp.5}" },
      "02": { "$type": "dimension", "$value": "{typography.ramp.4}" },
      "03": { "$type": "dimension", "$value": "{typography.ramp.3}" }
    },
    "caption": {
      "01": { "$type": "dimension", "$value": "{typography.ramp.3}" },
      "02": { "$type": "dimension", "$value": "{typography.ramp.2}" },
      "03": { "$type": "dimension", "$value": "{typography.ramp.1}" }
    },
    "fontWeight": {
      "black": {
        "$type": "fontWeight",
        "$value": "{core.typography.weight.black}"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": "{core.typography.weight.bold}"
      },
      "light": {
        "$type": "fontWeight",
        "$value": "{core.typography.weight.light}"
      },
      "medium": {
        "$type": "fontWeight",
        "$value": "{core.typography.weight.medium}"
      },
      "regular": {
        "$type": "fontWeight",
        "$value": "{core.typography.weight.regular}"
      }
    },
    "heading": {
      "01": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.8} + 0.75vw + 0.75vh)"
      },
      "02": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.7} + 0.5vw + 0.5vh)"
      },
      "03": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.6} + 0.5vw + 0.5vh)"
      },
      "04": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.5} + 0.5vw + 0.5vh)"
      },
      "05": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.4} + 0.25vw + 0.25vh)"
      },
      "06": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.3} + 0.25vw + 0.25vh)"
      }
    },
    "letterSpacing": {
      "normal": {
        "$type": "dimension",
        "$value": "{core.typography.letterSpacing.normal}"
      },
      "tight": {
        "$type": "dimension",
        "$value": "{core.typography.letterSpacing.tight}"
      },
      "wide": {
        "$type": "dimension",
        "$value": "{core.typography.letterSpacing.wide}"
      }
    },
    "lineHeight": {
      "body": {
        "$type": "number",
        "$value": "{core.typography.lineHeight.body}"
      },
      "collapse": {
        "$type": "number",
        "$value": "{core.typography.lineHeight.collapse}"
