      "normal": {
        "$type": "number",
        "$value": "{core.typography.lineHeight.normal}"
      },
      "tight": {
        "$type": "number",
        "$value": "{core.typography.lineHeight.tight}"
      }
    },
    "oversize": {
      "01": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.16} + 0.75vw + 0.75vh)"
      },
      "02": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.15} + 0.5vw + 0.5vh)"
      },
      "03": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.14} + 0.5vw + 0.5vh)"
      },
      "04": {
        "$type": "dimension",
        "$value": "calc({typography.ramp.13} + 0.5vw + 0.5vh)"
      }
    },
    "meta": {
      "caption": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.fontFamily.inter}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.fontWeight.medium}"
        },
        "fontSize": {
          "$type": "dimension",
          "$value": "{typography.ramp.2}"
        },
        "lineHeight": {
          "$type": "dimension",
          "$value": "{typography.lineHeight.normal}"
        }
      },
      "legal": {
