      "gridLarge": { "$type": "dimension", "$value": "{spacing.size.09}" },
      "gridMedium": { "$type": "dimension", "$value": "{spacing.size.07}" },
      "gridSmall": { "$type": "dimension", "$value": "{spacing.size.04}" }
    }
  },

  "elevation": {
    "default": { "$type": "shadow", "$value": "{elevation.level.1}" },
    "depth": { "$type": "number", "$value": "{elevation.depth.0}" },
    "surface": {
      "raised": { "$type": "shadow", "$value": "{elevation.level.1}" },
      "floating": { "$type": "shadow", "$value": "{elevation.level.2}" }
    }
  },

  "focus": {
    "ring": {
      "$description": "Focus ring styling for accessibility and interactive elements.",
      "$type": "composition",
      "$value": {
        "border": {
          "width": "2px",
          "style": "solid",
          "color": "{color.foreground.accent}"
        }
      }
    },
    "ringOffset": {
      "$type": "dimension",
      "$value": "{spacing.size.02}"
    }
  },

  "opacity": {
    "disabled": { "$type": "opacity", "$value": "{opacity.400}" },
    "overlay": { "$type": "opacity", "$value": "{opacity.600}" }
  },

  "dimension": {
    "minTarget": { "$type": "dimension", "$value": "{dimension.tapTargetMin}" },
    "buttonMinHeight": {
      "$type": "dimension",
      "$value": "{dimension.actionMinHeight}"
    },
    "breakpoint": {
      "sm": { "$type": "dimension", "$value": "640px" },
      "md": { "$type": "dimension", "$value": "768px" },
      "lg": { "$type": "dimension", "$value": "1024px" },
      "xl": { "$type": "dimension", "$value": "1280px" }
    }
  },

  "shape": {
    "radius": {
      "full": {
        "$type": "borderRadius",
        "$value": "{core.shape.radius.full}"
      },
      "extraLarge": {
        "$type": "borderRadius",
        "$value": "{shape.radius.05}"
      },
      "large": {
        "$type": "borderRadius",
        "$value": "{shape.radius.04}"
      },
      "medium": {
        "$type": "borderRadius",
        "$value": "{shape.radius.03}"
      },
      "small": {
        "$type": "borderRadius",
        "$value": "{shape.radius.02}"
      },
      "extraSmall": {
        "$type": "borderRadius",
        "$value": "{shape.radius.01}"
      },
      "none": {
        "$type": "borderRadius",
        "$value": "{core.shape.radius.none}"
      },
      "default": {
        "$type": "borderRadius",
        "$value": "{shape.radius.02}"
      }
    },
    "control": {
      "radius": {
        "default": {
          "$type": "borderRadius",
          "$value": "{shape.radius.medium}"
        },
        "pill": { "$type": "borderRadius", "$value": "{shape.radius.full}" }
      },
      "border": {
        "defaultWidth": {
          "$type": "borderWidth",
          "$value": "{shape.border.width.hairline}"
        },
        "defaultStyle": {
          "$type": "borderStyle",
          "$value": "{shape.border.style.solid}"
        },
        "focusWidth": {
          "$type": "borderWidth",
          "$value": "{shape.border.width.thick}"
        }
      }
    }
  },

  "motion": {
    "interaction": {
      "press": {
        "duration": {
          "$type": "duration",
          "$value": "{motion.duration.instant}"
        },
        "easing": {
          "$type": "cubicBezier",
          "$value": "{motion.easing.standard}"
        }
      },
      "enter": {
        "duration": {
          "$type": "duration",
          "$value": "{motion.duration.short}"
        },
        "easing": {
          "$type": "cubicBezier",
          "$value": "{motion.easing.standard}"
        }
      },
      "exit": {
        "duration": {
          "$type": "duration",
          "$value": "{motion.duration.medium}"
        },
        "easing": {
          "$type": "cubicBezier",
          "$value": "{motion.easing.emphasizedOut}"
        }
      }
    },
    "keyframes": {
      "fadeIn": {
        "$type": "string",
        "$value": "{core.motion.keyframes.fadeIn}"
      }
    }
  },

  "components": {
    "button": {
      "primary": {
        "background": {
          "$type": "color",
          "$value": "{color.background.brand}"
        },
        "foreground": {
          "$type": "color",
          "$value": "{color.foreground.onBrand}"
        },
        "border": { "$type": "color", "$value": "{color.border.strong}" },
        "radius": {
          "$type": "borderRadius",
          "$value": "{shape.control.radius.default}"
        },
        "paddingX": { "$type": "dimension", "$value": "{spacing.size.04}" },
        "paddingY": { "$type": "dimension", "$value": "{spacing.size.02}" },
        "height": {
          "$type": "dimension",
          "$value": "{dimension.buttonMinHeight}"
        },
        "elevation": {
          "$type": "shadow",
          "$value": "{elevation.surface.raised}"
        }
      },
      "danger": {
        "background": { "$type": "color", "$value": "{color.status.danger}" },
        "foreground": {
          "$type": "color",
          "$value": "{color.foreground.onBrand}"
        }
      }
    },
    "input": {
      "background": {
        "$type": "color",
        "$value": "{color.background.elevated}"
      },
      "foreground": {
        "$type": "color",
        "$value": "{color.foreground.primary}"
      },
      "border": { "$type": "color", "$value": "{color.border.subtle}" },
      "radius": {
        "$type": "borderRadius",
        "$value": "{shape.control.radius.default}"
      },
      "paddingX": { "$type": "dimension", "$value": "{spacing.size.03}" },
      "paddingY": { "$type": "dimension", "$value": "{spacing.size.02}" }
    },
    "badge": {
      "info": {
        "background": { "$type": "color", "$value": "{color.status.info}" },
        "foreground": {
          "$type": "color",
          "$value": "{color.foreground.onBrand}"
        },
        "radius": { "$type": "borderRadius", "$value": "{shape.radius.full}" },
        "paddingX": { "$type": "dimension", "$value": "{spacing.size.02}" }
      }
    },
    "typography": {
      "displayOversize": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.fontFamily.newsreader}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.fontWeight.black}"
        },
        "fontSize": {
          "$type": "dimension",
          "$value": "{typography.ramp.10}"
        },
        "lineHeight": {
          "$type": "dimension",
          "$value": "{typography.lineHeight.tight}"
        },
        "letterSpacing": {
          "$type": "dimension",
          "$value": "{typography.letterSpacing.tight}"
        }
      }
    }
  },

  "interaction": {
    "text": {
      "hover": { "$type": "color", "$value": "{color.foreground.secondary}" },
      "active": { "$type": "color", "$value": "{color.foreground.primary}" },
      "disabled": { "$type": "color", "$value": "{color.foreground.disabled}" }
    },
    "background": {
      "hover": { "$type": "color", "$value": "{color.background.hover}" },
      "active": { "$type": "color", "$value": "{color.background.active}" },
      "selected": {
        "$type": "color",
        "$value": "{color.background.highlight}"
      },
      "disabled": { "$type": "color", "$value": "{color.background.disabled}" }
    },
    "border": {
      "hover": { "$type": "color", "$value": "{color.border.primary}" },
      "active": { "$type": "color", "$value": "{color.border.bold}" },
      "disabled": { "$type": "color", "$value": "{color.border.disabled}" }
    }
  },

  "control": {
    "size": {
      "sm": {
        "height": {
          "$type": "dimension",
          "$value": "{dimension.actionMinHeight}"
        },
        "paddingX": { "$type": "dimension", "$value": "{spacing.size.03}" },
        "paddingY": { "$type": "dimension", "$value": "{spacing.size.02}" }
      },
      "md": {
        "height": {
          "$type": "dimension",
          "$value": "{dimension.actionMinHeight}"
        },
        "paddingX": { "$type": "dimension", "$value": "{spacing.size.04}" },
        "paddingY": { "$type": "dimension", "$value": "{spacing.size.03}" }
      },
      "lg": {
        "height": { "$type": "dimension", "$value": "44px" },
        "paddingX": { "$type": "dimension", "$value": "{spacing.size.06}" },
        "paddingY": { "$type": "dimension", "$value": "{spacing.size.04}" }
      }
    }
  },

  "link": {
    "text": { "$type": "color", "$value": "{color.foreground.link}" },
    "decorationColor": {
      "$type": "color",
      "$value": "{color.foreground.link}"
    },
    "decorationThickness": { "$type": "dimension", "$value": "1px" },
    "decorationOffset": { "$type": "dimension", "$value": "2px" },
    "hover.text": {
      "$type": "color",
      "$value": "{color.foreground.linkHover}"
    },
    "visited.text": {
      "$type": "color",
      "$value": "{color.foreground.linkVisited}"
    }
  },

  "overlay": {
    "scrimWeak": { "$type": "color", "$value": "rgba(0,0,0,0.24)" },
    "scrimMedium": { "$type": "color", "$value": "rgba(0,0,0,0.40)" },
    "scrimStrong": { "$type": "color", "$value": "rgba(0,0,0,0.64)" }
  },

  "skeleton": {
    "background": {
      "$type": "color",
      "$value": "{color.background.secondary}"
    },
    "foreground": { "$type": "color", "$value": "{color.background.tertiary}" },
    "shineDuration": { "$type": "duration", "$value": "{motion.duration.long}" }
  },

  "datavis": {
    "onFill": {
      "default": { "$type": "color", "$value": "{color.mode.white}" },
      "muted": { "$type": "color", "$value": "{color.palette.neutral.100}" }
    },
    "gridline": {
      "major": { "$type": "color", "$value": "{color.palette.neutral.300}" },
      "minor": { "$type": "color", "$value": "{color.palette.neutral.200}" }
    },
    "strokeWidth": {
      "series": { "$type": "dimension", "$value": "2px" },
      "grid": { "$type": "dimension", "$value": "1px" }
    }
  }
}
