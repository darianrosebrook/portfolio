          "design.paths.light": "{color.palette.neutral.200}",
          "design.paths.dark": "{color.palette.neutral.700}"
        }
      },
      "highlight": {
        "$type": "color",
        "$value": "{color.palette.blue.200}",
        "$extensions": {
          "design.paths.light": "{color.palette.blue.200}",
          "design.paths.dark": "{color.palette.blue.800}"
        }
      },
      "hover": {
        "$type": "color",
        "$value": "{color.palette.neutral.200}",
