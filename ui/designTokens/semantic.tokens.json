  "typography": {
    "semanticFamily": {
      "heading": {
        "$type": "fontFamily",
        "$value": "{typography.fontFamily.inter}"
      },
      "body": {
        "$type": "fontFamily",
        "$value": "{typography.fontFamily.inter}"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": "{typography.fontFamily.monaspace}"
      },
      "serif": {
        "$type": "fontFamily",
        "$value": "{typography.fontFamily.newsreader}"
      }
    },
    "body": {
      "01": { "$type": "dimension", "$value": "{typography.ramp.5}" },
      "02": { "$type": "dimension", "$value": "{typography.ramp.4}" },
      "03": { "$type": "dimension", "$value": "{typography.ramp.3}" },
      "04": { "$type": "dimension", "$value": "{typography.ramp.2}" },
      "default": {
        "fontFamily": {
          "$type": "fontFamily",
          "$value": "{typography.fontFamily.inter}"
        },
        "fontWeight": {
          "$type": "fontWeight",
          "$value": "{typography.fontWeight.regular}"
        },
        "fontSize": {
          "$type": "dimension",
          "$value": "{typography.ramp.4}"
        },
        "lineHeight": {
          "$type": "dimension",
          "$value": "{typography.lineHeight.normal}"
        },
        "letterSpacing": {
          "$type": "dimension",
          "$value": "{typography.letterSpacing.normal}"
        }
      },
      "small": {
