{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "toggleSwitch",
  "tokens": {
    "color": {
      "background": {
        "default": "{semantic.color.background.secondary}",
        "hover": "{semantic.interaction.background.hover}",
        "active": "{semantic.interaction.background.active}",
        "checked": "{semantic.color.action.background.primary.default}",
        "checkedHover": "{semantic.interaction.background.hover}",
        "disabled": "{semantic.color.background.disabled}"
      },
      "foreground": {
        "default": "{semantic.color.foreground.primary}",
        "hover": "{semantic.interaction.text.hover}",
        "active": "{semantic.interaction.text.active}",
        "disabled": "{semantic.color.foreground.disabled}"
      },
      "thumb": {
        "default": "{semantic.color.foreground.inverse}",
        "hover": "{semantic.interaction.text.hover}",
        "active": "{semantic.interaction.text.active}",
        "disabled": "{semantic.color.foreground.disabled}"
      },
      "border": {
        "default": "{semantic.color.border.light}",
        "hover": "{semantic.interaction.border.hover}",
        "active": "{semantic.interaction.border.active}",
        "disabled": "{semantic.color.border.disabled}"
      }
    },
    "size": {
      "width": {
        "small": "calc({semantic.control.size.sm.height} + {semantic.control.size.sm.paddingX} * 2)",
        "medium": "calc({semantic.control.size.md.height} + {semantic.control.size.md.paddingX} * 2)",
        "large": "calc({semantic.control.size.lg.height} + {semantic.control.size.lg.paddingX} * 2)"
      },
      "height": {
        "small": "{semantic.control.size.sm.height}",
        "medium": "{semantic.control.size.md.height}",
        "large": "{semantic.control.size.lg.height}"
      },
      "thumb": {
        "small": "calc({semantic.control.size.sm.height} - {semantic.control.size.sm.paddingY} * 2)",
        "medium": "calc({semantic.control.size.md.height} - {semantic.control.size.md.paddingY} * 2)",
        "large": "calc({semantic.control.size.lg.height} - {semantic.control.size.lg.paddingY} * 2)"
      },
      "padding": {
        "small": "{core.spacing.size.01}",
        "medium": "{core.spacing.size.02}",
        "large": "{core.spacing.size.03}"
      }
    },
    "spacing": {
      "gap": {
        "default": "{core.spacing.size.02}",
        "small": "{core.spacing.size.01}",
        "large": "{core.spacing.size.03}"
      },
      "margin": {
        "default": "{core.spacing.size.02}",
        "small": "{core.spacing.size.01}",
        "large": "{core.spacing.size.03}"
      }
    },
    "border": {
      "width": {
        "default": "{core.shape.border.width.hairline}",
        "thick": "{core.shape.border.width.thick}"
      },
      "radius": {
        "default": "{core.shape.radius.full}",
        "thumb": "{core.shape.radius.full}"
      }
    },
    "motion": {
      "duration": {
        "fast": "{core.motion.duration.short}",
        "normal": "{core.motion.duration.medium}",
        "slow": "{core.motion.duration.long}"
      },
      "easing": {
        "standard": "{core.motion.easing.standard}",
        "decelerate": "{core.motion.easing.emphasizedOut}",
        "accelerate": "{core.motion.easing.emphasizedIn}"
      }
    },
    "typography": {
      "fontSize": {
        "small": "{semantic.typography.body.04}",
        "medium": "{semantic.typography.body.03}",
        "large": "{semantic.typography.body.02}"
      },
      "fontWeight": {
        "default": "{semantic.typography.fontWeight.regular}",
        "medium": "{semantic.typography.fontWeight.medium}"
      },
      "lineHeight": {
        "default": "{semantic.typography.lineHeight.normal}",
        "tight": "{semantic.typography.lineHeight.tight}"
      }
    }
  }
}
