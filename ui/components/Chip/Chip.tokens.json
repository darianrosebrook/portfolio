{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "chip",
  "tokens": {
    "color": {
      "background": {
        "default": "{semantic.color.action.background.secondary.default}",
        "hover": "{semantic.color.action.background.secondary.hover}",
        "active": "{semantic.color.action.background.secondary.active}",
        "focus": "{semantic.color.mode.white}",
        "selected": "{semantic.color.action.background.primary.default}",
        "selectedHover": "{semantic.color.action.background.primary.hover}",
        "selectedActive": "{semantic.color.action.background.primary.active}",
        "dismissible": "{semantic.color.action.background.secondary.default}",
        "dismissibleHover": "{semantic.color.action.background.secondary.hover}",
        "dismissibleActive": "{semantic.color.action.background.secondary.active}"
      },
      "foreground": {
        "default": "{semantic.color.action.foreground.secondary.default}",
        "hover": "{semantic.color.action.foreground.secondary.default}",
        "active": "{semantic.color.action.foreground.secondary.default}",
        "focus": "{semantic.color.action.foreground.primary.default}",
        "selected": "{semantic.color.action.foreground.primary.default}",
        "selectedHover": "{semantic.color.action.foreground.primary.default}",
        "selectedActive": "{semantic.color.action.foreground.primary.default}",
        "dismissible": "{semantic.color.action.foreground.secondary.default}",
        "dismissibleHover": "{semantic.color.action.foreground.secondary.default}",
        "dismissibleActive": "{semantic.color.action.foreground.secondary.default}"
      },
      "border": {
        "default": "{semantic.color.action.border.secondary.default}",
        "hover": "{semantic.color.action.border.secondary.hover}",
        "active": "{semantic.color.action.border.secondary.default}",
        "focus": "{semantic.color.action.border.primary.focus}",
        "selected": "{semantic.color.action.border.primary.default}",
        "selectedHover": "{semantic.color.action.border.primary.default}",
        "selectedActive": "{semantic.color.action.border.primary.default}",
        "dismissible": "{semantic.color.action.border.secondary.default}",
        "dismissibleHover": "{semantic.color.action.border.secondary.hover}",
        "dismissibleActive": "{semantic.color.action.border.secondary.default}"
      },
      "icon": {
        "default": "{semantic.color.action.foreground.secondary.default}",
        "hover": "{semantic.color.action.foreground.secondary.default}",
        "active": "{semantic.color.action.foreground.secondary.default}",
        "selected": "{semantic.color.action.foreground.primary.default}",
        "dismissible": "{semantic.color.action.foreground.secondary.default}",
        "dismissibleHover": "{semantic.color.action.foreground.secondary.default}"
      }
    },

    "size": {
      "padding": {
        "horizontal": "{core.spacing.size.04}",
        "vertical": "{core.spacing.size.02}"
      },
      "gap": "{core.spacing.size.02}",
      "radius": "{core.shape.radius.full}",
      "border": "{core.shape.border.width.hairline}",
      "icon": {
        "size": "{core.spacing.size.04}",
        "margin": "{core.spacing.size.01}"
      }
    },

    "text": {
      "size": "{semantic.typography.body.04}",
      "weight": "{semantic.typography.fontWeight.medium}",
      "lineHeight": "{semantic.typography.lineHeight.tight}"
    },

    "motion": {
      "duration": {
        "fast": "{core.motion.duration.short}",
        "medium": "{core.motion.duration.medium}",
        "slow": "{core.motion.duration.long}"
      },
      "easing": {
        "standard": "{core.motion.easing.standard}",
        "in": "{core.motion.easing.in}",
        "out": "{core.motion.easing.out}"
      },
      "scale": {
        "pressed": 0.98,
        "iconEnter": 0.8,
        "iconExit": 0.8
      }
    },

    "focus": {
      "outlineWidth": "{core.shape.border.width.thick}",
      "outlineOffset": "{core.spacing.size.02}",
      "outlineColor": "{semantic.color.action.border.primary.focus}"
    }
  }
}
