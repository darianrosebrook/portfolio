{
  "name": "Checkbox",
  "layer": "primitive",
  "anatomy": ["root", "input", "indicator", "checkIcon", "indeterminateIcon"],
  "variants": {
    "size": ["sm", "md", "lg"]
  },
  "states": [
    "default",
    "hover",
    "focus",
    "active",
    "disabled",
    "checked",
    "indeterminate"
  ],
  "slots": {
    "checkIcon": { "optional": true },
    "indeterminateIcon": { "optional": true }
  },
  "a11y": {
    "role": "checkbox",
    "labeling": ["aria-label", "aria-labelledby", "aria-describedby"],
    "keyboard": [
      {
        "key": "Space",
        "when": "root",
        "then": "toggle"
      },
      {
        "key": "Enter",
        "when": "root",
        "then": "toggle"
      }
    ],
    "apgPattern": "checkbox"
  },
  "tokens": {
    "root": [
      "checkbox.color.background.default",
      "checkbox.color.border.default",
      "checkbox.size.width.md",
      "checkbox.size.height.md",
      "checkbox.border.radius",
      "checkbox.border.width"
    ],
    "indicator": [
      "checkbox.color.background.checked",
      "checkbox.color.border.checked",
      "checkbox.color.icon.default"
    ],
    "checkIcon": ["checkbox.color.icon.default", "checkbox.size.icon.md"],
    "indeterminateIcon": [
      "checkbox.color.icon.default",
      "checkbox.size.icon.md"
    ]
  },
  "ssr": {
    "hydrateOn": "interaction"
  },
  "rtl": {
    "flipIcon": false
  }
}
