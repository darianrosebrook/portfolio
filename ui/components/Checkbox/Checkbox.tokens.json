{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "checkbox",
  "tokens": {
    "size": {
      "sm": {
        "width": "{core.spacing.size.04}",
        "height": "{core.spacing.size.04}",
        "iconSize": "{core.spacing.size.03}"
      },
      "md": {
        "width": "{core.spacing.size.05}",
        "height": "{core.spacing.size.05}",
        "iconSize": "{core.spacing.size.04}"
      },
      "lg": {
        "width": "{core.spacing.size.06}",
        "height": "{core.spacing.size.06}",
        "iconSize": "{core.spacing.size.05}"
      }
    },
    "color": {
      "background": {
        "default": "{semantic.color.background.secondary}",
        "checked": "{semantic.color.background.brand}",
        "indeterminate": "{semantic.color.background.brand}",
        "disabled": "{semantic.color.background.disabled}"
      },
      "border": {
        "default": "{semantic.color.border.default}",
        "hover": "{semantic.color.border.bold}",
        "focus": "{semantic.color.border.focus}",
        "checked": "{semantic.color.background.brand}",
        "disabled": "{semantic.color.border.disabled}"
      },
      "icon": {
        "default": "{semantic.color.foreground.onBrand}",
        "disabled": "{semantic.color.foreground.disabled}"
      }
    },
    "border": {
      "width": "{core.shape.border.width.hairline}",
      "radius": "{core.shape.radius.02}"
    },
    "spacing": {
      "gap": "{core.spacing.size.02}"
    },
    "transition": {
      "duration": "{core.motion.duration.short}",
      "easing": "{core.motion.easing.standard}"
    },
    "focus": {
      "ring": {
        "width": "{core.shape.border.width.thick}",
        "color": "{semantic.color.border.accent}",
        "offset": "{semantic.focus.ringOffset}"
      }
    }
  }
}
