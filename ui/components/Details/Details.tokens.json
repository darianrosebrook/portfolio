{
  "prefix": "details",
  "tokens": {
    "size": {
      "padding": {
        "default": "{core.spacing.size.06}"
      },
      "radius": {
        "default": "{semantic.shape.control.radius.default}"
      },
      "icon": "{core.spacing.size.05}"
    },
    "color": {
      "background": {
        "default": "{semantic.color.background.primary}",
        "subtle": "{semantic.color.background.secondary}",
        "hover": "{semantic.color.background.hover}",
        "code": "{semantic.color.background.secondary}"
      },
      "foreground": {
