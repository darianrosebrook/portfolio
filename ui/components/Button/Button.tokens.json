{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "button",
  "tokens": {
    "color": {
      "background": {
        "default": "{semantic.color.action.background.default}",
        "hover": "{semantic.interaction.background.hover}",
        "active": "{semantic.interaction.background.active}",
        "focus": "{semantic.color.action.background.focus}",
        "focusVisible": "{semantic.color.action.background.focusVisible}",
        "disabled": "{semantic.color.action.background.disabled}",

        "primary": "{semantic.color.background.primary}",
        "primaryHover": "{semantic.interaction.background.hover}",
        "primaryActive": "{semantic.interaction.background.active}",

        "secondary": "{semantic.color.background.secondary}",
        "secondaryHover": "{semantic.interaction.background.hover}",
        "secondaryActive": "{semantic.interaction.background.active}",

        "tertiary": "{core.color.mode.transparent}",
        "tertiaryHover": "{semantic.interaction.background.hover}",
        "tertiaryActive": "{semantic.interaction.background.active}"
      },
      "foreground": {
        "default": "{semantic.color.foreground.inverse}",
        "hover": "{semantic.interaction.text.hover}",
        "active": "{semantic.interaction.text.active}",
        "focus": "{semantic.color.foreground.inverse}",
        "focusVisible": "{semantic.color.foreground.inverse}",
        "disabled": "{semantic.color.foreground.disabled}",

        "primary": "{semantic.color.foreground.primary}",
        "primaryHover": "{semantic.color.foreground.onBrand}",
        "primaryActive": "{semantic.color.foreground.onBrand}",

        "secondary": "{semantic.color.foreground.primary }",
        "secondaryHover": "{semantic.interaction.text.hover}",
        "secondaryActive": "{semantic.interaction.text.active}",

        "tertiary": "{semantic.color.foreground.primary}",
        "tertiaryHover": "{semantic.interaction.text.hover}",
        "tertiaryActive": "{semantic.interaction.text.active}"
      },
      "border": {
        "default": "{semantic.color.border.light}",
        "hover": "{semantic.interaction.border.hover}",
        "active": "{semantic.interaction.border.active}",
        "focus": "{semantic.color.border.accent}",
        "focusVisible": "{semantic.color.border.accent}",
        "disabled": "{semantic.color.border.disabled}",

        "primary": "{semantic.color.border.accent}",
        "primaryHover": "{semantic.color.border.accent}",
        "primaryActive": "{semantic.color.border.accent}",

        "secondary": "{semantic.color.border.light}",
        "secondaryHover": "{semantic.interaction.border.hover}",
        "secondaryActive": "{semantic.interaction.border.active}",

        "tertiary": "{semantic.color.border.light}",
        "tertiaryHover": "{semantic.interaction.border.hover}",
        "tertiaryActive": "{semantic.interaction.border.active}"
      },
      "spinner": {
        "border": "{semantic.color.border.light}",
        "borderAccent": "{semantic.color.border.accent}"
      }
    },

    "size": {
      "gap": {
        "default": "{core.spacing.size.04}",
        "small": "{core.spacing.size.03}",
        "large": "{core.spacing.size.05}"
      },
      "padding": {
        "small": "{core.spacing.size.03}",
        "large": "{core.spacing.size.05}"
      },
      "min": {
        "small": "{semantic.control.size.sm.height}",
        "medium": "{semantic.control.size.md.height}",
        "large": "{semantic.control.size.lg.height}"
      },
      "radius": "{semantic.shape.radius.full}",
      "border": "{core.shape.border.width.hairline}",
      "spinner": {
        "width": "{core.spacing.size.06}",
        "height": "{core.spacing.size.06}",
        "borderWidth": "{core.shape.border.width.thin}",
        "borderRadius": "{semantic.shape.radius.full}"
      },
      "margin": "{core.spacing.size.04}"
    },

    "text": {
      "weight": "{semantic.typography.fontWeight.medium}",
      "size": {
        "small": "{semantic.typography.body.04}",
        "medium": "{semantic.typography.body.01}",
        "large": "{semantic.typography.body.01}"
      },
      "lineHeight": {
        "collapse": "{semantic.typography.lineHeight.collapse}"
      }
    },

    "motion": {
      "duration": {
        "fast": "{core.motion.duration.short}",
        "spinner": "{core.motion.duration.short}"
      },
      "easing": {
        "standard": "{core.motion.easing.standard}"
      },
      "scale": { "pressed": 0.98 }
    },

    "focus": {
      "outlineWidth": "{core.shape.border.width.thick}",
      "outlineOffset": "{core.spacing.size.02}",
      "outlineColor": "{semantic.color.border.accent}"
    }
  }
}
