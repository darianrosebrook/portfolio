{
  "$schema": "../../../ui/designTokens/designTokens.schema.json",
  "prefix": "breadcrumbs",
  "tokens": {
    "color": {
      "foreground": {
        "secondary": "{semantic.color.foreground.secondary}",
        "link": "{semantic.color.foreground.link}",
        "primary": "{semantic.color.foreground.primary}",
        "tertiary": "{semantic.color.foreground.tertiary}"
      },
      "background": {
        "elevated": "{semantic.color.background.elevated}"
      },
      "border": {
        "subtle": "{semantic.color.border.subtle}"
      },
      "focus": "{semantic.color.border.accent}"
    },
    "typography": {
      "lineHeight": {
        "collapse": "{core.typography.lineHeight.collapse}"
      }
    },
    "shape": {
      "radius": {
        "medium": "{semantic.shape.radius.medium}",
        "small": "{semantic.shape.radius.small}"
      }
    },
    "elevation": {
      "surface": {
        "raised": "{semantic.elevation.surface.raised}"
      }
    },
    "spacing": {
      "gap": {
        "default": {
          "value": 0.5,
          "unit": "rem"
        },
        "small": {
          "value": 0.25,
          "unit": "rem"
        }
      },
      "padding": {
        "default": {
          "value": 0.5,
          "unit": "rem"
        },
        "small": {
          "value": 0.25,
          "unit": "rem"
        }
      },
      "margin": {
        "top": {
          "value": 0.25,
          "unit": "rem"
        }
      }
    }
  }
}
