{
  "prefix": "toast",
  "tokens": {
    "surface": {
      "bg": "{semantic.color.background.secondary}",
      "border": "{semantic.color.border.subtle}",
      "radius": "{core.shape.radius.medium}",
      "shadow": "{semantic.elevation.surface.raised}"
    },
    "color": {
      "info": "{semantic.color.foreground.primary}",
      "success": "{semantic.color.status.success.fg}",
      "warning": "{semantic.color.status.warning.fg}",
      "error": "{semantic.color.status.danger.fg}"
    },
    "accent": {
      "info": "{semantic.color.status.info}",
      "success": "{semantic.color.status.success}",
      "warning": "{semantic.color.status.warning}",
      "error": "{semantic.color.status.danger}"
    },
    "spacing": {
      "padding": "{core.spacing.size.05}",
      "gap": "{core.spacing.size.04}",
      "stackGap": "{core.spacing.size.04}"
    },
    "size": {
      "maxWidth": "400px"
    },
    "motion": {
      "enter": "{core.motion.duration.short}",
      "leave": "{core.motion.duration.short}"
    }
  }
}
