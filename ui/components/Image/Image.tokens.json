{
  "component": {
    "image": {
      "size": {
        "xs": {
          "value": 4,
          "unit": "rem"
        },
        "sm": {
          "value": 6,
          "unit": "rem"
        },
        "md": {
          "value": 8,
          "unit": "rem"
        },
        "lg": {
          "value": 12,
          "unit": "rem"
        },
        "xl": {
          "value": 16,
          "unit": "rem"
        },
        "full": {
          "value": 100,
          "unit": "%"
        }
      },
      "radius": {
        "none": {
          "value": 0,
          "unit": "px"
        },
        "sm": "{radius.sm}",
        "md": "{radius.md}",
        "lg": "{radius.lg}",
        "full": {
          "value": 999,
          "unit": "px"
        }
      },
      "placeholder": {
        "bg": "{color.background.muted}",
        "color": "{color.foreground.subtle}",
        "iconSize": {
          "value": 2,
          "unit": "rem"
        }
      },
      "error": {
        "bg": "{color.background.subtle}",
        "color": "{color.foreground.muted}",
        "iconSize": {
          "value": 1.5,
          "unit": "rem"
        },
        "fontSize": "{font.size.200}"
      },
      "loading": {
        "opacity": "0.7",
        "transition": "opacity 0.2s ease"
      }
    }
  }
}
