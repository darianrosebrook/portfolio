{
  "component": {
    "image": {
      "size": {
        "xs": "4rem",
        "sm": "6rem",
        "md": "8rem",
        "lg": "12rem",
        "xl": "16rem",
        "full": "100%"
      },
      "radius": {
        "none": "0",
        "sm": "{radius.sm}",
        "md": "{radius.md}",
        "lg": "{radius.lg}",
        "full": "999px"
      },
      "placeholder": {
        "bg": "{color.background.muted}",
        "color": "{color.foreground.subtle}",
        "iconSize": "2rem"
      },
      "error": {
        "bg": "{color.background.subtle}",
        "color": "{color.foreground.muted}",
        "iconSize": "1.5rem",
        "fontSize": "{font.size.200}"
      },
      "loading": {
        "opacity": "0.7",
        "transition": "opacity 0.2s ease"
      }
    }
  }
}
