{
  "prefix": "card",
  "tokens": {
    "color": {
      "background": {
        "default": "{semantic.color.background.primary}",
        "hover": "{semantic.color.background.hover}"
      },
      "foreground": {
        "default": "{semantic.color.foreground.primary}"
      },
      "border": {
        "default": "{semantic.color.border.default}",
        "hover": "{semantic.color.border.hover}"
      },
      "shadow": {
        "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
        "hover": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
      },
      "focus": {
        "ring": "{semantic.color.border.focus}"
      }
    },
    "typography": {
      "fontFamily": "{core.typography.fontFamily.sans}",
      "fontWeight": "{semantic.typography.fontWeight.normal}",
      "lineHeight": "{semantic.typography.lineHeight.normal}"
    },
    "size": {
      "small": {
        "padding": "{core.size.03}",
        "gap": "{core.size.02}",
        "borderRadius": "{semantic.size.radius.01}"
      },
      "medium": {
        "padding": "{core.size.04}",
        "gap": "{core.size.03}",
        "borderRadius": "{semantic.size.radius.02}"
      },
      "large": {
        "padding": "{core.size.06}",
        "gap": "{core.size.04}",
        "borderRadius": "{semantic.size.radius.03}"
      }
    },
    "border": {
      "width": "1px"
    },
    "image": {
      "aspectRatio": "16/9",
      "borderRadius": "{semantic.size.radius.01}"
    },
    "transition": {
      "duration": "0.15s",
      "easing": "ease-in-out",
      "properties": "background-color, border-color, box-shadow, transform"
    }
  },
  "fallbacks": {
